@model SnapSaves.Controllers.AdminViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<SnapSaves.Auth.AppUser> UserManager
@inject SnapSaves.Helpers.PermissionHelper PermissionHelper

<h1>Admin Dashboard</h1>

<!-- Tab navigation -->
<ul class="nav nav-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="universal-templates-tab" data-bs-toggle="tab" data-bs-target="#universal-templates" type="button" role="tab" aria-controls="universal-templates" aria-selected="true">
            Universal Templates
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="organizations-tab" data-bs-toggle="tab" data-bs-target="#organizations" type="button" role="tab" aria-controls="organizations" aria-selected="false">
            Organizations
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="upload-template-tab" data-bs-toggle="tab" data-bs-target="#upload-template" type="button" role="tab" aria-controls="upload-template" aria-selected="false">
            Upload New Template
        </button>
    </li>
</ul>

<!-- Tab content -->
<div class="tab-content" id="adminTabContent">
    <div class="tab-pane fade show active" id="universal-templates" role="tabpanel" aria-labelledby="universal-templates-tab">
        <h2>Universal Templates</h2>
        <ul>
            @foreach (var template in Model.UniversalTemplates)
            {
                <li>
                    @template.Name - @template.Description
                    <form asp-controller="Admin" asp-action="DeleteTemplate" asp-route-id="@template.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this template?');">Delete</button>
                    </form>
                    <form asp-controller="Admin" asp-action="CreateProjectFromTemplate" asp-route-templateId="@template.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary btn-sm">Create Project</button>
                    </form>
                    <form asp-controller="Admin" asp-action="SetTemplateAnonymousAccess" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="templateId" value="@template.Id" />
                    </form>
                    <!-- New: Update Instructions Button -->
                    <button type="button" class="btn btn-secondary btn-sm" onclick="showUpdateInstructionsModal(@template.Id)">Update Instructions</button>
                </li>
            }
        </ul>
    </div>

    <div class="tab-pane fade" id="organizations" role="tabpanel" aria-labelledby="organizations-tab">
        <h2>Organizations</h2>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Users</th>
                                <th>Courses</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var org in Model.Organizations.OrderBy(o => o.Type).ThenByDescending(o => o.CreatedAt))
                            {
                                <tr>
                                    <td>
                                        <strong>@org.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge @org.TypeBadgeClass">@org.TypeDisplayName</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@org.Description</small>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">@org.UserCount users</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">@org.CourseCount courses</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@org.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <a asp-controller="Organizations" asp-action="Details" asp-route-id="@org.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Organizations.Count(o => o.Type == SnapSaves.Models.OrganizationType.Default)</h5>
                        <p class="card-text">Default</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Organizations.Count(o => o.Type == SnapSaves.Models.OrganizationType.LtiIntegration)</h5>
                        <p class="card-text">LTI Integration</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Organizations.Count(o => o.Type == SnapSaves.Models.OrganizationType.SingleUser)</h5>
                        <p class="card-text">Individual Users</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Organizations.Count(o => o.Type == SnapSaves.Models.OrganizationType.AdminCreated)</h5>
                        <p class="card-text">Admin Created</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="upload-template" role="tabpanel" aria-labelledby="upload-template-tab">
        <h3>Upload a New Universal Template</h3>
        <form asp-controller="Admin" asp-action="UploadUniversalTemplate" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="projectName" class="form-label">Project Name:</label>
                <input type="text" class="form-control" id="projectName" name="projectName" required>
            </div>
            <div class="mb-3">
                <label for="projectDescription" class="form-label">Project Description:</label>
                <textarea class="form-control" id="projectDescription" name="projectDescription" rows="3" required></textarea>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="allowAnonymousAccess" name="allowAnonymousAccess" value="true">
                <label class="form-check-label" for="allowAnonymousAccess">Allow Anonymous Access</label>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="hasInstructions" name="hasInstructions" value="true" onchange="toggleInstructionsUpload()">
                <label class="form-check-label" for="hasInstructions">This template has instructions</label>
            </div>
            <div class="mb-3" id="instructionsUpload" style="display:none;">
                <label for="instructionsZip" class="form-label">Upload Instructions (.zip of HTML/CSS/JS):</label>
                <input type="file" class="form-control" id="instructionsZip" name="instructionsZip" accept=".zip">
            </div>
            <div class="mb-3">
                <label for="templateZip" class="form-label">Select a .zip file for the project:</label>
                <input type="file" class="form-control" id="templateZip" name="templateZip" accept=".zip" required>
            </div>
            <button type="submit" class="btn btn-primary">Upload and Create Template</button>
        </form>
    </div>
</div>

<!-- Modal for updating instructions -->
<div class="modal fade" id="updateInstructionsModal" tabindex="-1" aria-labelledby="updateInstructionsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="updateInstructionsForm" asp-controller="Admin" asp-action="UpdateTemplateInstructions" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" id="updateTemplateId" name="templateId" value="" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateInstructionsModalLabel">Update Template Instructions</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="instructionsZip" class="form-label">Upload New Instructions (.zip of HTML/CSS/JS):</label>
                        <input type="file" class="form-control" id="instructionsZip" name="instructionsZip" accept=".zip" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Update Instructions</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Add CSS for badge colors -->
<style>
    .badge-primary {
        background-color: #007bff;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-info {
        background-color: #17a2b8;
    }

    .badge-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .badge-secondary {
        background-color: #6c757d;
    }
</style>

<!-- Add JavaScript -->
<script>
    function toggleInstructionsUpload() {
        var check = document.getElementById('hasInstructions');
        var upload = document.getElementById('instructionsUpload');
        upload.style.display = check.checked ? 'block' : 'none';
    }

    function showUpdateInstructionsModal(templateId) {
        document.getElementById('updateTemplateId').value = templateId;
        var modal = new bootstrap.Modal(document.getElementById('updateInstructionsModal'));
        modal.show();
    }
</script>
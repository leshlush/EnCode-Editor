@model SnapSaves.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Welcome Back</h2>
                
                <!-- Prominent Google Sign-In Section -->
                <div class="google-signin-section p-4 mb-4" style="background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%); border-radius: 12px; border: 2px solid #e5e7eb;">
                    <div class="text-center mb-3">
                        <h4 class="mb-2" style="color: #374151;">Continue with Google</h4>
                        <p class="text-muted mb-3">The fastest way to access your workspace</p>
                    </div>
                    
                    <form asp-action="GoogleLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <button type="submit" class="btn btn-danger w-100 py-3" style="font-size: 1.3rem; box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);">
                            <i class="fab fa-google me-3" style="font-size: 1.6rem;"></i>
                            Sign In with Google
                        </button>
                    </form>
                </div>

                <!-- Divider -->
                <div class="text-center mb-4">
                    <hr class="my-3">
                    <span class="text-muted bg-white px-3" style="position: relative; top: -12px;">or use existing account</span>
                </div>

                <!-- Traditional Login Form - Less Prominent -->
                <div class="traditional-login-section">
                    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted"></label>
                            <input asp-for="Email" class="form-control" style="border-color: #d1d5db;" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-muted"></label>
                            <input asp-for="Password" class="form-control" type="password" style="border-color: #d1d5db;" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label text-muted"></label>
                        </div>

                        <button type="submit" class="btn btn-outline-secondary w-100 py-2">Sign In with Email</button>
                    </form>
                </div>

                <div class="mt-4 text-center">
                    <p class="text-muted">New to SnapCode?</p>
                    <a asp-action="Register" class="btn btn-primary">Get Started with Google</a>
                    <br>
                    <small class="text-muted mt-2 d-block">
                        <a href="#" class="text-decoration-none">Forgot password?</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Error"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
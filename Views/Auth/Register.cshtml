@model SnapSaves.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Create Your Account</h2>
                
                <div class="text-center mb-4">
                    <p class="lead text-muted">Join SnapCode to start coding instantly in your browser</p>
                </div>

                <!-- Google Sign-Up Button - Primary and Prominent -->
                <div class="mb-4">
                    <form asp-action="GoogleLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <button type="submit" class="btn btn-danger w-100 py-3 mb-3" style="font-size: 1.2rem;">
                            <i class="fab fa-google me-3" style="font-size: 1.5rem;"></i>
                            Sign Up with Google
                        </button>
                    </form>
                </div>

                <div class="text-center">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Google Account Required:</strong> We use Google authentication to ensure secure access to your projects and workspace.
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <p class="text-muted">Already have an account?</p>
                    <a asp-action="Login" class="btn btn-outline-primary">Sign In Instead</a>
                </div>
            </div>
        </div>

        <!-- Benefits Section -->
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title text-center mb-3">Why Choose SnapCode?</h5>
                <div class="row text-center">
                    <div class="col-md-4 mb-3">
                        <i class="fas fa-rocket text-primary mb-2" style="font-size: 2rem;"></i>
                        <h6>Instant Setup</h6>
                        <small class="text-muted">No downloads or installations required</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <i class="fas fa-cloud text-success mb-2" style="font-size: 2rem;"></i>
                        <h6>Cloud-Based</h6>
                        <small class="text-muted">Access your projects from anywhere</small>
                    </div>
                    <div class="col-md-4 mb-3">
                        <i class="fas fa-shield-alt text-info mb-2" style="font-size: 2rem;"></i>
                        <h6>Secure</h6>
                        <small class="text-muted">Google authentication keeps you safe</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Error"]
    </div>
}
@{
    Layout = null;
    var showInstructionsButtons = ViewData["ShowInstructionsButtons"] as bool? ?? false;
    var isSnapCode = ViewContext.RouteData.Values["controller"]?.ToString() == "SnapCode";
    var isIndexAction = ViewContext.RouteData.Values["action"]?.ToString() == "Index";
}

@inject Microsoft.AspNetCore.Identity.UserManager<SnapSaves.Auth.AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();
    var role = roles.FirstOrDefault() ?? "User";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow custom-navbar">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SnapCode</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Projects" asp-action="Index">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Courses">Courses</a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Admin">Admin</a>
                    </li>
                }
            </ul>

            @* Centered SnapCode-specific buttons *@
            @if (isSnapCode && isIndexAction)
            {
                <div class="d-flex justify-content-center w-100">
                    @if (showInstructionsButtons)
                    {
                        <button class="btn btn-outline-primary me-2" onclick="setView('split')">Split View</button>
                        <button class="btn btn-outline-primary me-2" onclick="setView('instructions')">Instructions Only</button>
                        <button class="btn btn-outline-primary me-2" onclick="setView('jdk')">Editor Only</button>
                    }
                    <button class="btn btn-success" id="saveProjectBtn" onclick="saveProject()">Save</button>
                    <button class="btn btn-outline-secondary" id="createShareLinkBtn" onclick="createShareLink()">Create Share Link</button>
                </div>
            }

            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                      <span class="nav-link">Hello, @role</span>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-controller="Auth" asp-action="Logout">
                            <button type="submit" class="nav-link btn btn-link">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

@{
    Layout = "~/Views/Shared/_SnapCodeLayout.cshtml";
    ViewData["Title"] = "CheerpJ Viewer";
    var projectId = ViewData["ProjectId"] as string;
    var userId = ViewData["UserId"] as string;
}

<div id="snapcode-container">
    <iframe id="jdk-iframe"
            src="@Url.Action("Index", "Jdk", new { projectId = projectId, userId = userId })">
    </iframe>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        font-family: Arial, sans-serif;
    }

        body.snapcode-layout {
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }

    main[role="main"] {
        flex: 1 1 auto;
        min-height: 0;
        display: flex;
        flex-direction: column;
        padding: 0;
    }

    #snapcode-container {
        flex: 1 1 auto;
        min-height: 0;
        display: flex;
        width: 100%;
    }

    #jdk-iframe {
        width: 100%;
        height: 100%;
        border: none;
        display: block;
    }
</style>
<script>
    function saveProject() {
        var jdkFrame = document.getElementById('jdk-iframe');
        if (jdkFrame && jdkFrame.contentWindow && typeof jdkFrame.contentWindow.saveProject === 'function') {
            jdkFrame.contentWindow.saveProject();
        } else {
            alert('Save function not available in JDK view.');
        }
    }
</script>
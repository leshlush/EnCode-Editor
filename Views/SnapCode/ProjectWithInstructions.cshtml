@{
    Layout = "~/Views/Shared/_SnapCodeLayout.cshtml";
    ViewData["Title"] = "CheerpJ Viewer";
    var projectId = ViewData["ProjectId"] as string ?? Model?.Id;
    var userId = ViewData["UserId"] as string;
    var courseId = ViewData["CourseId"] as int?;
    var instructionsId = ViewData["InstructionsId"] as string ?? Model?.InstructionsId;
    var instructionsUrl = ViewData["InstructionsUrl"] as string;
    var projectName = ViewData["ProjectName"] as string ?? Model?.Name ?? "Project";
    var isReadOnly = ViewData["IsReadOnly"] as bool? ?? false;
    var shareToken = ViewData["ShareToken"] as string;
    // Fallback: if instructionsUrl is not set, try to build it from Model.Instructions.Location
    if (string.IsNullOrEmpty(instructionsUrl) && Model?.Instructions != null && !string.IsNullOrEmpty(Model.Instructions.Location))
    {
        instructionsUrl = "/" + Model.Instructions.Location.Replace("\\", "/").TrimStart('/');
    }
    var jdkUrl = isReadOnly
        ? Url.Action("ReadOnly", "Jdk", new { projectId = projectId, shareToken = shareToken })
        : Url.Action("Index", "Jdk", new { projectId = projectId, userId = userId, projectName = projectName });
}

<div id="snapcode-container">
    <iframe id="instructions-iframe"
            src="@(string.IsNullOrEmpty(instructionsUrl) ? Url.Action("Placeholder", "Instructions") : instructionsUrl)">
    </iframe>
    <iframe id="jdk-iframe"
            src="@jdkUrl">
    </iframe>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        font-family: Arial, sans-serif;
    }

    #snapcode-container {
        display: flex;
        height: 90vh;
    }

    #instructions-iframe {
        width: 25%;
        border-right: 1px solid #ccc;
        height: 100%;
    }

    #jdk-iframe {
        width: 75%;
        height: 100%;
        border: none;
    }
</style>

<script>
    function setView(view) {
        const instructionsFrame = document.getElementById('instructions-iframe');
        const jdkFrame = document.getElementById('jdk-iframe');

        if (view === 'split') {
            instructionsFrame.style.width = '25%';
            instructionsFrame.style.display = 'block';
            jdkFrame.style.width = '75%';
            jdkFrame.style.display = 'block';
        } else if (view === 'instructions') {
            instructionsFrame.style.width = '100%';
            instructionsFrame.style.display = 'block';
            jdkFrame.style.display = 'none';
        } else if (view === 'jdk') {
            jdkFrame.style.width = '100%';
            jdkFrame.style.display = 'block';
            instructionsFrame.style.display = 'none';
        }
    }

    function saveProject() {
        var jdkFrame = document.getElementById('jdk-iframe');
        if (jdkFrame && jdkFrame.contentWindow && typeof jdkFrame.contentWindow.saveProject === 'function') {
            jdkFrame.contentWindow.saveProject();
        } else {
            alert('Save function not available in JDK view.');
        }
    }

        function saveACopy(courseId) {
        var jdkFrame = document.getElementById('jdk-iframe');
        if (jdkFrame && jdkFrame.contentWindow && typeof jdkFrame.contentWindow.getProjectInfoForShareLink === 'function') {
            jdkFrame.contentWindow.getProjectInfoForShareLink(function(projectInfo) {
                if (!projectInfo || !projectInfo.userId || !projectInfo.projectId) {
                    alert('Could not get project info for saving a copy.');
                    return;
                }
                var payload = {
                    userId: projectInfo.userId,
                    projectId: projectInfo.projectId
                };
                if (courseId) {
                    payload.courseId = courseId;
                }
                fetch('/api/ProjectsApi/save-a-copy', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.url) {
                        showCopyModal(data.message, data.url);
                    } else {
                        alert('Failed to save a copy: ' + (data.message || 'Unknown error'));
                    }
                })
                .catch(err => {
                    alert('Error saving a copy: ' + err);
                });
            });
        } else {
            alert('Save-a-copy function not available in JDK view.');
        }
    }

    // Helper to show a modal with a clickable/copyable link
    function showCopyModal(message, url) {
        // Remove any existing modal
        var existing = document.getElementById('saveCopyModal');
        if (existing) existing.remove();

        var modal = document.createElement('div');
        modal.id = 'saveCopyModal';
        modal.style.position = 'fixed';
        modal.style.left = 0;
        modal.style.top = 0;
        modal.style.width = '100vw';
        modal.style.height = '100vh';
        modal.style.background = 'rgba(0,0,0,0.4)';
        modal.style.display = 'flex';
        modal.style.alignItems = 'center';
        modal.style.justifyContent = 'center';
        modal.style.zIndex = 9999;

        modal.innerHTML = `
            <div style="background:#fff;padding:2rem;border-radius:8px;max-width:90vw;box-shadow:0 2px 16px #0003;">
                <h5 style="margin-top:0;">${message}</h5>
                <p>
                    <a href="${url}" target="_blank" style="word-break:break-all;">${url}</a>
                </p>
                <button onclick="navigator.clipboard.writeText('${url}');this.innerText='Copied!';" class="btn btn-sm btn-outline-primary">Copy Link</button>
                <button onclick="document.getElementById('saveCopyModal').remove();" class="btn btn-sm btn-secondary ms-2">Close</button>
            </div>
        `;
        document.body.appendChild(modal);
    }

        function viewShareLink() {
        var jdkFrame = document.getElementById('jdk-iframe');
        if (jdkFrame && jdkFrame.contentWindow && typeof jdkFrame.contentWindow.getProjectInfoForShareLink === 'function') {
            jdkFrame.contentWindow.getProjectInfoForShareLink(function(projectInfo) {
                if (!projectInfo || !projectInfo.projectId) {
                    alert('Could not get project info for share link.');
                    return;
                }
                fetch('/api/ProjectsApi/get-sharelink?projectId=' + encodeURIComponent(projectInfo.projectId))
                    .then(response => response.json())
                    .then(data => {
                        if (data.url) {
                            window.prompt('Your share link:', data.url);
                        } else {
                            alert('No share link found for this project.');
                        }
                    })
                    .catch(err => {
                        alert('Error retrieving share link: ' + err);
                    });
            });
        } else {
            alert('Share link function not available in JDK view.');
        }
    }

     function createShareLink() {
        var jdkFrame = document.getElementById('jdk-iframe');
        if (jdkFrame && jdkFrame.contentWindow && typeof jdkFrame.contentWindow.getProjectInfoForShareLink === 'function') {
            // Ask the JDK iframe for project info (userId, projectId)
            jdkFrame.contentWindow.getProjectInfoForShareLink(function(projectInfo) {
                if (!projectInfo || !projectInfo.userId || !projectInfo.projectId) {
                    alert('Could not get project info for share link.');
                    return;
                }
                // Call the API to create the share link
                fetch('/api/ProjectsApi/create-sharelink', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        userId: projectInfo.userId,
                        projectId: projectInfo.projectId
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.url) {
                        window.prompt('Share link created! Copy this URL:', data.url);
                    } else {
                        alert('Failed to create share link: ' + (data.message || 'Unknown error'));
                    }
                })
                .catch(err => {
                    alert('Error creating share link: ' + err);
                });
            });
        } else {
            alert('Share link function not available in JDK view.');
        }
    }
</script>

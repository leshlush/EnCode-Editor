@{
}
@model List<SnapSaves.Auth.AppUser>

<h1>Students in Your Courses</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Username</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.UserName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students are currently enrolled in your courses.</p>
}

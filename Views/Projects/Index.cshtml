@model List<SnapSaves.Models.Project>
@{
    var templates = ViewData["Templates"] as List<SnapSaves.Models.Project>;
}

<h1>My Projects</h1>

<form asp-controller="Projects" asp-action="Create" method="post" class="mb-3">
    <button type="submit" class="btn btn-primary">Create New Project</button>
</form>

@if (Model.Any())
{
    <h2>Your Projects</h2>
    <ul>
        @foreach (var project in Model)
        {
            <li>
                <h3>
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id">
                        @project.Name
                    </a>
                </h3>
                <p>Created: @project.CreatedAt</p>
                <p>Last Modified: @project.LastModified</p>
                <p>Files: @project.Files.Count</p>
            </li>
        }
    </ul>
}
else
{
    <p>You don't have any projects yet.</p>
}

@if (templates != null && templates.Any())
{
    <h2>Template Projects</h2>
    <ul>
        @foreach (var template in templates)
        {
            <li>
                <h3>@template.Name</h3>
                <p>Files: @template.Files.Count</p>
                <form asp-controller="Projects" asp-action="CopyTemplate" method="post" class="mt-2">
                    <input type="hidden" name="templateId" value="@template.Id" />
                    <button type="submit" class="btn btn-secondary">Use Template</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No templates available.</p>
}

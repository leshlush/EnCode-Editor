@model IEnumerable<SnapSaves.Models.Template>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var template in Model)
        {
            <li>
                <strong>@template.Name</strong>: @template.Description
                <form asp-controller="Projects" asp-action="CreateFromUniversalTemplate" asp-route-templateId="@template.MongoId" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary btn-sm">Create Project</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No universal templates available.</p>
}

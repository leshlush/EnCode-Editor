@model IEnumerable<SnapSaves.Models.Template>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-2">
        @foreach (var template in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="#" class="template-link text-decoration-none" data-template-id="@template.Id">
                                @template.Name
                            </a>
                        </h5>
                        <p class="card-text text-muted">@template.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No universal templates available.</p>
}

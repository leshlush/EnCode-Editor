@model List<SnapSaves.Models.Course>

<h1>Your Courses</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">
                            @course.Name
                        </a>
                    </td>
                    <td>@course.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You are not enrolled in any courses.</p>
}
